# ============================================
# BAKAME AI - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
#
# For CI/CD, these same variables should be added to:
# - Vercel Dashboard (for web app)
# - Codemagic (for mobile builds - only if overriding defaults)
# ============================================

# ===========================================
# SUPABASE (Required)
# ===========================================
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public URL (safe to expose)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Anonymous Key (safe to expose - has RLS protection)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service Role Key (KEEP SECRET - bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Connection Pooler (Recommended for production)
# Get from: Supabase Dashboard > Settings > Database > Connection Pooling
# Format: postgres://[user]:[password]@[host]:6543/postgres?pgbouncer=true
SUPABASE_DB_POOLER_URL=

# ===========================================
# AI PROVIDER (Required - Choose ONE)
# ===========================================

# Option 1: OpenRouter (Recommended - unified API for multiple models)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key

# Option 2: OpenAI Direct (fallback if OpenRouter not set)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key

# ===========================================
# REDIS CACHE (Recommended)
# ===========================================
# Get from: https://console.upstash.com/
# Used for: Rate limiting, caching, session storage
# Falls back to in-memory if not provided

UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# ===========================================
# SENTRY ERROR TRACKING (Recommended)
# ===========================================
# Get from: https://sentry.io/
# Used for: Error tracking, performance monitoring, session replay

# Server-side DSN
SENTRY_DSN=https://your-dsn@sentry.io/project-id

# Client-side DSN (same as above, but public)
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id

# Optional: For source map uploads
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# ===========================================
# GOOGLE OAUTH (Required for social login)
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials

# Web Client ID (used by both web and mobile)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Web Client Secret (web app only)
GOOGLE_CLIENT_SECRET=your-client-secret

# ===========================================
# TOOL APIs (Optional - enables specific features)
# ===========================================

# Weather Tool
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Currency Exchange Tool
# Get from: https://exchangerate-api.com/
EXCHANGE_RATE_API_KEY=

# Web Search Tool
# Get from: https://tavily.com/
TAVILY_API_KEY=

# News Tool
# Get from: https://newsapi.org/
NEWS_API_KEY=

# Translation Tool (falls back to LibreTranslate if not set)
# Get from: https://cloud.google.com/translate
GOOGLE_TRANSLATE_API_KEY=

# ===========================================
# N8N WORKFLOWS (Optional - for automation)
# ===========================================
# Self-hosted n8n instance for workflow automation

N8N_BASE_URL=https://n8n.yourdomain.com
N8N_WEBHOOK_PATH=/webhook
N8N_HOST=n8n.yourdomain.com
N8N_WEBHOOK_URL=https://n8n.yourdomain.com/
N8N_USER=admin
N8N_PASSWORD=your-secure-password

# ===========================================
# APP CONFIGURATION (Optional)
# ===========================================

# Public app URL (used for OAuth callbacks, OpenGraph, etc.)
NEXT_PUBLIC_APP_URL=https://bakame.ai

# Node environment
NODE_ENV=production
